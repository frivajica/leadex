---
import LanguageSwitcher from '../LanguageSwitcher';

const cookieLang = Astro.cookies.get('i18next')?.value;
const headerLang = Astro.request.headers.get('accept-language')?.split(',')[0].split('-')[0];
const supported = ['en', 'es', 'fr'];
const currentLocale = cookieLang || (supported.includes(headerLang || '') ? headerLang : 'en');

const isLoggedIn = Astro.cookies.get('is_logged_in')?.value === 'true';
---

<header class="bg-white border-b border-gray-100">
  <nav class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex justify-between h-16 items-center">
      <div class="flex items-center gap-6">
        <a href="/" class="flex items-center gap-2">
          <div class="w-9 h-9 bg-gradient-to-br from-primary-500 to-primary-700 rounded-xl flex items-center justify-center shadow-lg">
            <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
            </svg>
          </div>
          <span class="text-xl font-bold bg-gradient-to-r from-primary-600 to-primary-800 bg-clip-text text-transparent">Lead Extractor</span>
        </a>
        
        <div class="hidden sm:flex items-center gap-4">
          <a href="/pricing" class="px-3 py-2 text-sm font-medium text-gray-600 hover:text-gray-900 transition-colors" data-i18n="nav.pricing">
            Pricing
          </a>
        </div>
      </div>
      
      <div class="flex items-center gap-6">
        <LanguageSwitcher client:load locale={currentLocale} />
        <div class="flex items-center gap-3">
          {isLoggedIn ? (
            <a
              href="/dashboard"
              class="px-5 py-2 text-sm font-medium bg-gradient-to-r from-primary-600 to-primary-700 text-white rounded-lg hover:from-primary-700 hover:to-primary-800 transition-all shadow-md hover:shadow-lg"
              data-i18n="nav.dashboard"
            >
              Dashboard
            </a>
          ) : (
            <>
              <a href="/login" class="px-4 py-2 text-sm font-medium text-gray-600 hover:text-gray-900 transition-colors" data-i18n="auth.sign_in">
                Sign In
              </a>
              <a
                href="/register"
                class="px-4 py-2 text-sm font-medium bg-gradient-to-r from-primary-600 to-primary-700 text-white rounded-lg hover:from-primary-700 hover:to-primary-800 transition-all shadow-md hover:shadow-lg"
                data-i18n="landing.get_started"
              >
                Get Started
              </a>
            </>
          )}
        </div>
      </div>
    </div>
  </nav>
</header>
