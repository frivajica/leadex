---
import Layout from '../../layouts/Layout.astro';
import AllJobsContent from '../../components/AllJobsContent';
import Navigation from '../../components/Navigation';
import { getT, getLangFromCookies } from '../../lib/i18n-astro';

const locale = getLangFromCookies(Astro.cookies);
const t = getT(locale);
---

<Layout title={`${t('nav.all_jobs')} - Lead Extractor`}>
  <div class="min-h-screen bg-gray-50">
    <Navigation client:load currentPath="/jobs" lang={locale} />

    <main class="max-w-5xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
      <AllJobsContent client:load lang={locale} />
    </main>
  </div>
</Layout>
