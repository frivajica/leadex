---
import Layout from '../../layouts/Layout.astro';
import JobForm from '../../components/JobForm';
import Navigation from '../../components/Navigation';
---

<Layout title="New Job - Lead Extractor">
  <div class="min-h-screen bg-gray-50">
    <!-- Navigation -->
    <Navigation client:load currentPath="/jobs/new" />

    <main class="max-w-3xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
      <div class="mb-6">
        <a href="/dashboard" class="inline-flex items-center gap-2 text-gray-600 hover:text-primary-600 transition-colors">
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
          </svg>
          <span data-i18n="common.back_to_dashboard">Back to Dashboard</span>
        </a>
      </div>

      <div class="bg-white rounded-2xl shadow-card p-6 border border-gray-100">
        <h1 class="text-2xl font-bold text-gray-900 mb-6">Create New Lead Extraction Job</h1>
        <JobForm client:load />
      </div>
    </main>
  </div>

  <script>
    import { authApi } from '../../lib/api';

    // Client-side auth check
    async function checkAuth() {
      try {
        await authApi.me();
      } catch {
        window.location.href = '/login';
      }
    }
    checkAuth();

    document.getElementById('logout-btn')?.addEventListener('click', async () => {
      try {
        await authApi.logout();
      } catch (e) {
        // Continue with logout even if API fails
      }
      window.location.href = '/login';
    });
  </script>
</Layout>
