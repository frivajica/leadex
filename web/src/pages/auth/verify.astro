---
import Layout from '../../layouts/Layout.astro';
import { getT, getLangFromCookies } from '../../lib/i18n-astro';

const locale = getLangFromCookies(Astro.cookies);
const t = getT(locale);
const apiUrl = import.meta.env.PUBLIC_API_URL || 'http://localhost:8000';
---

<Layout title={`${t('auth.verifying')} - Lead Extractor`}>
  <div class="min-h-screen flex items-center justify-center bg-gray-50 py-12 px-4">
    <div class="max-w-md w-full text-center">
      <div id="loading" class="animate-pulse">
        <div class="w-16 h-16 bg-primary-100 rounded-full flex items-center justify-center mx-auto mb-4">
          <svg class="w-8 h-8 text-primary-600 animate-spin" fill="none" viewBox="0 0 24 24">
            <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4" />
            <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z" />
          </svg>
        </div>
        <h2 class="text-xl font-semibold text-gray-900">{t('auth.verifying')}</h2>
      </div>

      <div id="success" class="hidden">
        <div class="w-16 h-16 bg-green-100 rounded-full flex items-center justify-center mx-auto mb-4">
          <svg class="w-8 h-8 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width={2} d="M5 13l4 4L19 7" />
          </svg>
        </div>
        <h2 class="text-xl font-semibold text-gray-900 mb-2">{t('auth.verify_success')}</h2>
        <p class="text-gray-600">{t('auth.redirect_dashboard')}</p>
      </div>

      <div id="error" class="hidden">
        <div class="w-16 h-16 bg-red-100 rounded-full flex items-center justify-center mx-auto mb-4">
          <svg class="w-8 h-8 text-red-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width={2} d="M6 18L18 6M6 6l12 12" />
          </svg>
        </div>
        <h2 class="text-xl font-semibold text-gray-900 mb-2">{t('auth.verify_failed')}</h2>
        <p id="error-message" class="text-gray-600 mb-6">{t('auth.verify_invalid')}</p>
        <a href="/login" class="inline-block px-6 py-3 bg-primary-600 text-white rounded-lg hover:bg-primary-700 font-medium">
          {t('auth.back_to_login')}
        </a>
      </div>
    </div>
  </div>

  <div id="api-config" data-url={apiUrl} class="hidden"></div>
  
  <!-- Translation Bridge -->
  <div id="i18n-bridge" class="hidden">
    <div id="bridge-no-token">{t('auth.error_no_token')}</div>
    <div id="bridge-verify-invalid">{t('auth.verify_invalid')}</div>
    <div id="bridge-generic-error">{t('auth.error_generic')}</div>
  </div>
</Layout>

<script>
  const loadingEl = document.getElementById('loading');
  const successEl = document.getElementById('success');
  const errorEl = document.getElementById('error');
  const errorMessageEl = document.getElementById('error-message');
  const apiConfigEl = document.getElementById('api-config');

  async function verifyToken() {
    const urlParams = new URLSearchParams(window.location.search);
    const token = urlParams.get('token');
    const apiUrl = apiConfigEl?.getAttribute('data-url') || 'http://localhost:8000';

    if (!token) {
      showError('auth.error_no_token');
      return;
    }

    try {
      const response = await fetch(`${apiUrl}/api/auth/verify`, {
        method: 'POST',
        headers: {
          'Content-Type': 'application/json',
        },
        credentials: 'include',
        body: JSON.stringify({ token }),
      });

      if (!response.ok) {
        const error = await response.json().catch(() => ({ detail: 'auth.verify_invalid' }));
        showError(error.detail || 'auth.verify_invalid');
        return;
      }

      showSuccess();

      const redirectUrl = urlParams.get('redirect');
      setTimeout(() => {
        window.location.href = redirectUrl || '/dashboard';
      }, 1500);
    } catch (err) {
      showError('auth.error_generic');
    }
  }

  function showSuccess() {
    loadingEl?.classList.add('hidden');
    successEl?.classList.remove('hidden');
  }

  function showError(i18nKey: string) {
    loadingEl?.classList.add('hidden');
    errorEl?.classList.remove('hidden');
    
    if (errorMessageEl) {
      let message = '';
      if (i18nKey === 'auth.error_no_token') message = document.getElementById('bridge-no-token')?.textContent || '';
      else if (i18nKey === 'auth.verify_invalid') message = document.getElementById('bridge-verify-invalid')?.textContent || '';
      else if (i18nKey === 'auth.error_generic') message = document.getElementById('bridge-generic-error')?.textContent || '';
      
      if (message) {
        errorMessageEl.textContent = message;
      }
    }
  }

  verifyToken();
</script>
