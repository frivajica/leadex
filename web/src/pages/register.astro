---
import Layout from '../layouts/Layout.astro';
import AuthForm from '../components/AuthForm';
import LanguageSwitcher from '../components/LanguageSwitcher';
import { getT, getLangFromCookies } from '../lib/i18n-astro';

const currentLocale = getLangFromCookies(Astro.cookies);
const t = getT(currentLocale);
---


<Layout title={`${t('auth.create_account')} - Lead Extractor`}>
  <div class="min-h-screen flex">
    <!-- Left Side - Visual -->
    <div class="hidden lg:flex flex-1 bg-gradient-to-br from-primary-600 via-primary-700 to-primary-900 items-center justify-center p-12 relative overflow-hidden">
      <!-- Decorative elements -->
      <div class="absolute top-0 left-0 w-full h-full opacity-10">
        <div class="absolute top-20 right-20 w-72 h-72 bg-white rounded-full blur-3xl"></div>
        <div class="absolute bottom-20 left-20 w-96 h-96 bg-accent-400 rounded-full blur-3xl"></div>
      </div>
      
      <div class="relative z-10 text-center text-white">
        <div class="w-24 h-24 bg-white/10 rounded-3xl flex items-center justify-center mx-auto mb-6 backdrop-blur-sm">
          <svg class="w-12 h-12 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z" />
          </svg>
        </div>
        <h3 class="text-3xl font-bold mb-4">{t('auth.register_hero_title')}</h3>
        <p class="text-primary-100 text-lg max-w-md">
          {t('auth.register_hero_desc')}
        </p>
        
        <!-- Features list -->
        <div class="mt-12 text-left space-y-4 max-w-sm mx-auto">
          <div class="flex items-center gap-3">
            <div class="w-8 h-8 bg-white/10 rounded-lg flex items-center justify-center">
              <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
              </svg>
            </div>
            <span class="text-primary-50">{t('auth.feat_extract')}</span>
          </div>
          <div class="flex items-center gap-3">
            <div class="w-8 h-8 bg-white/10 rounded-lg flex items-center justify-center">
              <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
              </svg>
            </div>
            <span class="text-primary-50">{t('auth.feat_filter')}</span>
          </div>
          <div class="flex items-center gap-3">
            <div class="w-8 h-8 bg-white/10 rounded-lg flex items-center justify-center">
              <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
              </svg>
            </div>
            <span class="text-primary-50">{t('auth.feat_export')}</span>
          </div>
        </div>
      </div>
    </div>

    <!-- Right Side - Form -->
    <div class="flex-1 flex items-center justify-center px-4 sm:px-6 lg:px-8 py-12">
      <div class="max-w-md w-full animate-fade-in">
        <!-- Logo -->
        <div class="text-center mb-8">
          <a href="/" class="inline-flex items-center gap-2">
            <div class="w-10 h-10 bg-gradient-to-br from-primary-500 to-primary-700 rounded-xl flex items-center justify-center shadow-lg">
              <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
              </svg>
            </div>
            <span class="text-2xl font-bold bg-gradient-to-r from-primary-600 to-primary-800 bg-clip-text text-transparent">Lead Extractor</span>
          </a>
        </div>

        <!-- Language Switcher -->
        <div class="flex justify-center mb-6">
          <LanguageSwitcher client:load locale={currentLocale} />
        </div>

        <!-- Card -->
        <div class="bg-white rounded-2xl shadow-card-hover p-8 border border-gray-100">
          <h2 class="text-2xl font-bold text-gray-900 text-center mb-2">{t('auth.create_account')}</h2>
          <p class="text-gray-500 text-center mb-8">{t('auth.register_desc')}</p>

          <AuthForm client:load action="register" locale={currentLocale} redirectUrl={Astro.url.searchParams.get('redirect')} />
        </div>

        <p class="mt-6 text-center text-sm text-gray-500">
          <span>{t('auth.has_account')}</span>
          <a href="/login" class="text-primary-600 hover:text-primary-700 font-medium transition-colors">
            {t('auth.sign_in')}
          </a>
        </p>
      </div>
    </div>

  </div>
</Layout>
