---
import Layout from '../layouts/Layout.astro';
import AuthForm from '../components/AuthForm';
import LanguageSwitcher from '../components/LanguageSwitcher';

const cookieLang = Astro.cookies.get('i18next')?.value;
const headerLang = Astro.request.headers.get('accept-language')?.split(',')[0].split('-')[0];
const supported = ['en', 'es', 'fr'];
const currentLocale = cookieLang || (supported.includes(headerLang || '') ? headerLang : 'en');
---

<Layout title="Sign In - Lead Extractor">
  <div class="min-h-screen flex">
    <!-- Left Side - Form -->
    <div class="flex-1 flex items-center justify-center px-4 sm:px-6 lg:px-8 py-12">
      <div class="max-w-md w-full animate-fade-in">
        <!-- Logo -->
        <div class="text-center mb-8">
          <a href="/" class="inline-flex items-center gap-2">
            <div class="w-10 h-10 bg-gradient-to-br from-primary-500 to-primary-700 rounded-xl flex items-center justify-center shadow-lg">
              <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
              </svg>
            </div>
            <span class="text-2xl font-bold bg-gradient-to-r from-primary-600 to-primary-800 bg-clip-text text-transparent">Lead Extractor</span>
          </a>
        </div>

        <!-- Language Switcher -->
        <div class="flex justify-center mb-6">
          <LanguageSwitcher client:load locale={currentLocale} />
        </div>

        <!-- Card -->
        <div class="bg-white rounded-2xl shadow-card-hover p-8 border border-gray-100">
          <h2 class="text-2xl font-bold text-gray-900 text-center mb-2" data-i18n="auth.welcome_back">Welcome back</h2>
          <p class="text-gray-500 text-center mb-8" data-i18n="auth.sign_in_desc">Sign in to access your leads</p>

          <AuthForm client:load action="login" locale={currentLocale} redirectUrl={Astro.url.searchParams.get('redirect')} />
        </div>

        <p class="mt-6 text-center text-sm text-gray-500">
          <span data-i18n="auth.no_account">Don't have an account?</span>
          <a href="/register" class="text-primary-600 hover:text-primary-700 font-medium transition-colors" data-i18n="auth.sign_up">
            Create one free
          </a>
        </p>
      </div>
    </div>

    <!-- Right Side - Visual -->
    <div class="hidden lg:flex flex-1 bg-gradient-to-br from-primary-600 via-primary-700 to-primary-900 items-center justify-center p-12 relative overflow-hidden">
      <!-- Decorative elements -->
      <div class="absolute top-0 left-0 w-full h-full opacity-10">
        <div class="absolute top-20 left-20 w-72 h-72 bg-white rounded-full blur-3xl"></div>
        <div class="absolute bottom-20 right-20 w-96 h-96 bg-accent-400 rounded-full blur-3xl"></div>
      </div>
      
      <div class="relative z-10 text-center text-white">
        <div class="w-24 h-24 bg-white/10 rounded-3xl flex items-center justify-center mx-auto mb-6 backdrop-blur-sm">
          <svg class="w-12 h-12 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M13 7h8m0 0v8m0-8l-8 8-4-4-6 6" />
          </svg>
        </div>
        <h3 class="text-3xl font-bold mb-4" data-i18n="auth.hero_title">Find Your Next Clients</h3>
        <p class="text-primary-100 text-lg max-w-md" data-i18n="auth.hero_desc">
          Extract leads from local businesses without websites. Perfect for web agencies and marketers.
        </p>
        
        <!-- Stats -->
        <div class="mt-12 grid grid-cols-3 gap-8">
          <div>
            <div class="text-3xl font-bold">100%</div>
            <div class="text-primary-200 text-sm" data-i18n="landing.benefit_free">Free & Open</div>
          </div>
          <div>
            <div class="text-3xl font-bold" data-i18n="benefit.no">No</div>
            <div class="text-primary-200 text-sm" data-i18n="landing.benefit_no_card">Credit Card</div>
          </div>
          <div>
            <div class="text-3xl font-bold" data-i18n="benefit.self">Self</div>
            <div class="text-primary-200 text-sm" data-i18n="landing.benefit_self_hosted">Hosted</div>
          </div>
        </div>
      </div>
    </div>

  </div>
</Layout>
